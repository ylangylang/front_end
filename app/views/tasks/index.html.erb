<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Subject</th>
      <th>Detail</th>
      <th>Started on</th>
      <th>Finished on</th>
      <th>Due date</th>
      <th>Status</th>
      <th>Tag</th>
      <th>Icon</th>
      <th>Is current</th>
      <th>Is indicated</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.user_id %></td>
        <td><%= task.subject %></td>
        <td><%= task.detail %></td>
        <td><%= task.started_on %></td>
        <td><%= task.finished_on %></td>
        <td><%= task.due_date %></td>
        <td><%= task.status_id %></td>
        <td><%= task.tag_id %></td>
        <td><%= task.icon_id %></td>
        <td><%= task.is_current %></td>
        <td><%= task.is_indicated %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

